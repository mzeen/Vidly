@model Vidly.Models.Movie
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<ul>
    <li>Genre: @Model.Genre.Name</li>
    <li>Released Date: @Model.ReleasedDate.Value.ToShortDateString()</li>
    <li>Added Date: @Model.DateAdded.Value.ToShortDateString()</li>
    <li>Number in Stock: @Model.Stock</li>
</ul>

